<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calm2"
    >

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:background="@drawable/rounded_button5"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button5"
        android:layout_marginTop="22dp"
        android:background="@drawable/rounded_button1"
        android:padding="10dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="80dp"
        android:layout_height="400dp"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/button1"
        android:background="@drawable/rounded_button2" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/button7"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="18dp"
        android:background="@drawable/rounded_button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="700dp"
        android:layout_alignTop="@+id/button6"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/button5"
        android:text=""
        android:background="@drawable/rounded_button3"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reset"
        android:layout_alignStart="@+id/reset"
        android:layout_alignTop="@+id/button7"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button6" />


</RelativeLayout>
